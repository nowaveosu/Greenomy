<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="300dp">

        <View
            android:layout_width="360dp"
            android:layout_height="361dp"
            android:background="@drawable/store_bg" />

        <ImageView
            android:layout_width="360dp"
            android:layout_height="361dp"
            android:scaleType="fitStart"
            android:src="@drawable/store_bg" />

        <ImageView
            android:id="@+id/pine_tree"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="130dp"
            android:src="@mipmap/pine_tree"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/discount_point"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:src="@drawable/discount_point"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="캐릭터"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="꾸미기"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@drawable/green_line" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/nonClicked_pine_tree"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:onClick="deletePineTree"
            android:scaleType="centerCrop"
            android:src="@mipmap/nonclicked_pine_tree" />

        <ImageView
            android:id="@+id/tree_house"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/treehouse"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>